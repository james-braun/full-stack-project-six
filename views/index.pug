extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

       
      h1 My Portfolio!

       
      p.lead.text-light
        | This portfolio is a combination of work that I did as a front-end developer student and as a full-stack developer student.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

       
      
      
      
      
      each project in data.projects
          .cell
            a(href=`/project/${project.id}`)
              img.thumbnail(src=`${project.image_urls[1]}`)
              h5 #{project.project_name}
      
